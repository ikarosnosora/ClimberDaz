# Application
NODE_ENV=development
PORT=3001

# Database - Using SQLite for development
DATABASE_URL=sqlite:./climberdaz.db

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=climberdaz_super_secure_jwt_secret_key_for_development_environment_2024
JWT_REFRESH_SECRET=climberdaz_refresh_token_secret_key_for_development_environment_2024
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=climberdaz_session_secret_for_development_environment_2024

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# External APIs (Optional for development)
TENCENT_CLOUD_SECRET_ID=your_tencent_secret_id
TENCENT_CLOUD_SECRET_KEY=your_tencent_secret_key
CONTENT_MODERATION_REGION=ap-beijing

# Email (Optional for development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
